<Window x:Class="course_project.OtherWindows.CheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_project.OtherWindows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CheckWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ComboBox Grid.Row="0" x:Name="TeacherComboBox" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Height="30"/>
            <ComboBox Grid.Row="1" x:Name="SubjectComboBox" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Height="30"/>

        </Grid>
        
        <Button x:Name="button" Content="Підтвердити" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Grid.Row="1" Click="button_Click"/>

    </Grid>
</Window>
